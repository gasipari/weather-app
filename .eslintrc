{
    "rules": {
        "brace-style": 0,
        "comma-spacing": [2, {"before": false, "after": true}],
        "indent": [1, 4],
        "linebreak-style": [2, "unix"],
        "max-len": [2, 100, 4, {"ignoreUrls": true}],
        "no-console": 0,
        "no-extra-semi": 1,
        "no-irregular-whitespace": 1,
        "no-loop-func": 1,
        "no-multi-spaces": 1,
        "no-trailing-spaces": 1,
        "react/react-in-jsx-scope": 1,
        "react/jsx-uses-react": 1,
        "react/jsx-uses-vars": 1,
        "semi": [1, "always"],
        "space-infix-ops": [2, {"int32Hint": true}],
        "strict": [2, "global"],
        "quotes": [1, "double"]
    },
    "env": {
        "browser": true,
        "es6": true,
        "jasmine": true,
        "jest": true,
        "jquery": true,
        "node": true,
        "protractor": true
    },
    "extends": "eslint:recommended",
    "ecmaFeatures": {
        "experimentalObjectRestSpread": true,
        "jsx": true,
        "modules": true,
        "sourceType": "module"
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },
    "plugins": [
        "react"
    ]
}
